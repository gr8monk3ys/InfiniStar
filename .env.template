# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Authentication (Clerk)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# -----------------------------------------------------------------------------
# Database (Postgres / Neon)
# -----------------------------------------------------------------------------
# Pooled connection string (use for app runtime)
DATABASE_URL=""
# Direct connection string (use for migrations, optional but recommended)
DIRECT_URL=""

# -----------------------------------------------------------------------------
# Email (Postmark)
# -----------------------------------------------------------------------------
SMTP_FROM=
POSTMARK_API_TOKEN=
POSTMARK_SIGN_IN_TEMPLATE=
POSTMARK_ACTIVATION_TEMPLATE=

# -----------------------------------------------------------------------------
# Subscriptions (Stripe)
# -----------------------------------------------------------------------------
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_MONTHLY_PLAN_ID=

# -----------------------------------------------------------------------------
# Real-time (Pusher)
# -----------------------------------------------------------------------------
PUSHER_APP_ID=
PUSHER_SECRET=
NEXT_PUBLIC_PUSHER_APP_KEY=
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# -----------------------------------------------------------------------------
# Web Push (Background Notifications, Optional)
# -----------------------------------------------------------------------------
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@yourdomain.com

# -----------------------------------------------------------------------------
# AI (Anthropic Claude)
# -----------------------------------------------------------------------------
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# AI Usage Limits (Optional)
# -----------------------------------------------------------------------------
# Defaults are conservative. Adjust to match your pricing model.
AI_FREE_MONTHLY_MESSAGE_LIMIT=50
AI_FREE_MONTHLY_TOKEN_QUOTA=200000
# Set to 0 to disable the PRO fair-use cap (not recommended).
AI_PRO_MONTHLY_COST_CAP_CENTS=800

# -----------------------------------------------------------------------------
# Monitoring (Sentry)
# -----------------------------------------------------------------------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=
SENTRY_RELEASE=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=

# -----------------------------------------------------------------------------
# Security Headers / CSP (Optional)
# -----------------------------------------------------------------------------
# Override CSP entirely (advanced)
CONTENT_SECURITY_POLICY=
# Set true/1/yes/on to emit Content-Security-Policy-Report-Only header
CONTENT_SECURITY_POLICY_REPORT_ONLY=false
# Optional endpoint for CSP violation reports
CONTENT_SECURITY_POLICY_REPORT_URI=

# -----------------------------------------------------------------------------
# Cron
# -----------------------------------------------------------------------------
CRON_SECRET=

# -----------------------------------------------------------------------------
# Ops / Runbooks (Optional)
# -----------------------------------------------------------------------------
# Stripe webhook verification script target URL
STAGING_WEBHOOK_URL=
STRIPE_WEBHOOK_VERIFY_TIMEOUT_MS=15000
# Sentry API base URL + minimum active issue alert rules expected
SENTRY_BASE_URL=https://sentry.io
SENTRY_ALERT_MIN_RULES=2
# Backup/restore drill target DB (must differ from DATABASE_URL)
DRILL_DATABASE_URL=
BACKUP_DIR=./tmp/db-drills
# E2E authenticated suites (optional)
E2E_TEST_EMAIL=
E2E_TEST_PASSWORD=
E2E_ASSERT_AUTH_REDIRECTS=false
E2E_RUN_LIVE_AI=false

# -----------------------------------------------------------------------------
# Monetization (Optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_AFFILIATE_LINKS=false
NEXT_PUBLIC_AFFILIATE_ANTHROPIC_URL=
NEXT_PUBLIC_AFFILIATE_NOTION_URL=
NEXT_PUBLIC_AFFILIATE_GRAMMARLY_URL=

NEXT_PUBLIC_ENABLE_ADSENSE=false
NEXT_PUBLIC_ADSENSE_CLIENT_ID=
NEXT_PUBLIC_ADSENSE_SLOT_HOME_INLINE=
NEXT_PUBLIC_ADSENSE_SLOT_PRICING_INLINE=

# Comma-separated list of emails allowed to access /api/affiliate/summary
AFFILIATE_ANALYTICS_ALLOWED_EMAILS=
# Comma-separated list of moderation reviewers allowed to list all reports via /api/moderation/reports
MODERATION_REVIEWER_EMAILS=
